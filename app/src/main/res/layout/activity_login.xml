<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".UserLogin"
    android:layout_marginTop="-2dp"
    android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/rowdies_bold"
                android:text="@string/login"
                android:textColor="@color/textColor"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/phoneNumber"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="15dp"
                android:inputType="phone"
                android:fontFamily="@font/rowdies_regular"
                android:hint="@string/phone"
                android:paddingBottom="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/passWORD"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/rowdies_regular"
                android:hint="@string/password1"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingBottom="15dp" />

            <ImageButton
                android:id="@+id/showPass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_toEndOf="@+id/passWORD"
                android:background="@color/TRANSPERENT"
                android:foreground="@drawable/ic_show"
                android:onClick="hidePassword" />

            <ImageButton
                android:id="@+id/hidePass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/passWORD"
                android:layout_marginStart="10sp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:background="@color/TRANSPERENT"
                android:foreground="@drawable/ic_hide"
                android:onClick="hidePassword" />

        </RelativeLayout>

            <TextView
                android:id="@+id/warnings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rowdies_regular"
                android:visibility="gone"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/rowdies_bold"
                android:text="@string/login_btn"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/redirect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rowdies_regular"
                android:gravity="center_horizontal"
                android:layout_marginTop="30sp"
                android:padding="12dp"
                android:text="@string/redirect1"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/abc1234"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rowdies_regular"
                android:gravity="center_horizontal"
                android:layout_marginTop="30sp"
                android:padding="12dp"
                android:textColor="@color/textColor" />


            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>
</ScrollView>