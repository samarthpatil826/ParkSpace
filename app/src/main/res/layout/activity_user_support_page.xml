<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSupportPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/navBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/btnbg2"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_baseline_arrow_back"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>


    <TextView
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:fontFamily="@font/rowdies_bold"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/textColor"
        android:text="@string/support"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_below="@+id/support"
        android:layout_alignParentStart="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/ic_baseline_contact_support_24" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="258dp"
        app:srcCompat="@drawable/ic_baseline_call_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="259dp"
        android:fontFamily="@font/rowdies_regular"
        android:textColor="@color/textColor"
        android:layout_marginBottom="571dp"
        android:layout_toEndOf="@+id/imageButton"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/xxxxx_xxxxx"
        android:textSize="15sp" />

    <ImageButton
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="338dp"
        app:srcCompat="@drawable/ic_baseline_email_24" />

    <TextView
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="343dp"
        android:layout_marginBottom="486dp"
        android:fontFamily="@font/rowdies_regular"
        android:textColor="@color/textColor"
        android:layout_toEndOf="@+id/imageButton"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/abcdefg123"
        android:textSize="15sp" />

</RelativeLayout>